{
	"compilerOptions": {
		"target": "es6",
		"lib": ["dom", "dom.iterable", "esnext"],
		"allowJs": false,
		"skipLibCheck": true,
		"strict": true,
		"strictPropertyInitialization": false,
		"forceConsistentCasingInFileNames": true,
		"noEmit": true,
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"module": "esnext",
		"emitDecoratorMetadata": true,
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"allowSyntheticDefaultImports": true,
		"baseUrl": ".",
		"paths": {
			"@api/*": ["./api/*"],
			"@atoms/*": ["./atoms/*"],
			"@contexts/*": ["./contexts/*"],
			"@utils/*": ["./utils/*"],
			"@components/*": ["./components/*"],
			"@constants/*": ["./constants/*"],
			"@images/*": ["./images/*"],
			"@public/*": ["./public/*"],
			"@helpers/*": ["./helpers/*"],
			"@hooks/*": ["./hooks/*"],
			"@labels": ["./store/labels/index.ts"],
			"@store/*": ["./store/*"],
			"@svg/*": ["./images/svg/*"],
			"@png/*": ["./images/png/*"],
			"@webp/*": ["./images/webp/*"],
			"@gif/*": ["./images/gif/*"],
			"@jpg/*": ["./images/jpg/*"],
			"@styles/*": ["./styles/*"],
			"@forms/*": ["./forms/*"],
			"@database/*": ["./prisma/*"],
			"@forms": ["./forms/index.ts"],
			"@interfaces/*": ["./interfaces/*"]
		},
		"incremental": true
	},
	"include": ["**/*.ts", "**/*.tsx"],
	"exclude": ["**/node_modules"]
}
